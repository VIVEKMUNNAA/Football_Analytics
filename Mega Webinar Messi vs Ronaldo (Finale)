        "### Feature Engineering"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {
        "id": "yvjUTYWq2Fwn"
      },
      "source": [
        "season_wise_meta_df.columns"
      ],
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {
        "id": "1-Jw7xcC9no6"
      },
      "source": [
        "season_wise_meta_df[\"xGDiff\"] = season_wise_meta_df[\"goals\"].sub(season_wise_meta_df[\"xG\"]).round(2)\n",
        "\n",
        "season_wise_meta_df[\"goal_contrib\"] = season_wise_meta_df[\"goals\"].add(season_wise_meta_df[\"assists\"]).round(1)\n",
        "\n",
        "season_wise_meta_df[\"xgoal_contrib\"] = season_wise_meta_df[\"xG\"].add(season_wise_meta_df[\"xA\"]).round(1)\n",
        "\n",
        "season_wise_meta_df[\"shot_contrib\"] = season_wise_meta_df[[\"shots\", \"key_passes\", \"assists\"]].sum(axis=1).round(1)"
      ],
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {
        "id": "i0B5L22z--eA"
